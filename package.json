{
  "name": "yote",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd server && npm install && cd ../web && npm install",
    "start": "NODE_ENV=development nodemon server/index.js",
    "start:staging": "NODE_ENV=staging nodemon server/index.js",
    "start:prod": "NODE_ENV=production node server/index.js",
    "build:staging": "npm --prefix web run build:staging",
    "build:prod": "npm --prefix web run build",
    "build:watch": "npm --prefix web run build:watch"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}